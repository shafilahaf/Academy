<odoo>
	<record id="course_form" model="ir.ui.view">
		<field name="name">course_form</field>
		<field name="model">academic.course</field>
		
		<field name="arch" type="xml">
			<form string="Course Form" version="7.0">
				<sheet>
					<div class="oe_title">
						<label for="name" class="oe_edit_only" string="Course Name"/>
						<h1>
							<field name="name"/>
						</h1>
					</div>

					<group>
						<field name="responsible_id"/>
					</group>

					<notebook>
						<page string="Description">
							<field name="description"/>
						</page>
					<page string="Sessions">
						<field name="session_ids"> # from course.py in section_ids
							<tree name="Sessions">
								<field name="name"/> # link session.py from course.py they're join
								<field name="start_date"/>
								<field name="instructor_id"/>
								<field name="seats"/>
							</tree>
						</field>
					</page>
					</notebook>
				</sheet>
			</form>
			</field>
	</record>
</odoo>

